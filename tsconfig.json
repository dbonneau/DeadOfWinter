{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "esnext",
      "dom"
    ],
    "importHelpers": true,
    "paths": {
      "@app/*": ["app/*"],
      "@env/*": ["environments/*"],
      "@core/*": ["app/core/*"],
      "@api/*": ["app/core/api/*"],
      "@shared/*": ["app/shared/*"],
      "@consts/*": ["app/shared/consts/*"],
      "@directives/*": ["app/shared/directives/*"],
      "@tools/*": ["app/core/tools/*"],
      "@models/*": ["app/core/models/*"],
      "@material/*": ["app/modules/angular-material/*"],
      "@generated/*": ["app/generated/*"],
    }
  },
  "exclude": [
    "e2e/**",
    "src/generated/**",
    "**/*.json",
    "*.json"
  ]
}
